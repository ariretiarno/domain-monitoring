# Database Configuration
# Options: sqlite3, mysql
DB_DRIVER=sqlite3

# SQLite Configuration (when DB_DRIVER=sqlite3)
DB_PATH=dem.db

# MySQL Configuration (when DB_DRIVER=mysql)
# Uncomment and configure these when using MySQL
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=dem
# DB_USER=demuser
# DB_PASSWORD=your-secure-password

# Docker MySQL Configuration (for docker-compose)
# These are used by the MySQL container
# MYSQL_ROOT_PASSWORD=rootpassword
# MYSQL_DATABASE=dem
# MYSQL_USER=demuser
# MYSQL_PASSWORD=dempassword
# MYSQL_PORT=3306

# HTTP Server Configuration
HTTP_ADDR=:8080
PORT=8080

# Application Configuration
MONITORING_INTERVAL=24h
ALERT_THRESHOLDS=90d,60d,30d,7d
GOOGLE_CHAT_WEBHOOK=
RETENTION_PERIOD=90d

# Optional: Log Level
# LOG_LEVEL=info
